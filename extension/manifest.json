{
    "manifest_version": 3,
    "name": "ChatFocus - Auto-Collapse AI Chats",
    "version": "2.1.0",
    "description": "Automatically collapses past AI responses to make scrolling easier.",
    "author": "ChatFocus Team",
    "icons": {
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/icons/*",
                "content/*.js",
                "content/core/*.js",
                "content/features/**/*.js",
                "content/storage/*.js",
                "content/sites/**/*.js"
            ],
            "matches": [
                "https://chatgpt.com/*",
                "https://claude.ai/*",
                "https://chat.openai.com/*"
            ]
        }
    ],
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://chat.openai.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*",
                "https://claude.ai/*",
                "https://chat.openai.com/*"
            ],
            "js": [
                "content/loader.js"
            ],
            "css": [
                "styles/base.css",
                "styles/components/message-folding.css",
                "styles/components/toc.css",
                "styles/components/controls.css",
                "styles/components/code-mode.css",
                "styles/themes/dark.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "options_page": "options/options.html",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/icons/icon16.png",
            "48": "assets/icons/icon48.png",
            "128": "assets/icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}